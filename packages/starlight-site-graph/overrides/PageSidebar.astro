---
import Default from "@astrojs/starlight/components/PageSidebar.astro";
import type { Props } from '@astrojs/starlight/props';

import PageGraph from "../components/graph/PageGraph.astro";
import Backlinks from "../components/Backlinks.astro";

---

<PageGraph {...Astro.props} class="right-sidebar-panel graph-panel">
    <h2 slot="title">Graph View</h2>
</PageGraph>

<Default {...Astro.props}>
    <slot />
</Default>

<Backlinks {...Astro.props} class="right-sidebar-panel backlinks-panel">
    <h2 slot="title">Backlinks</h2>
</Backlinks>
